task: "Generate wiki blurb"
doc: "Create a wiki blurb"
aliases:
- generate-wiki-blurb-for-a-famous-person
prompt-version: 2
prompt: |+
    <person> - Wikipedia
    
    en.wikipedia.org › wiki › <person>

    Short bio:
    <:pp><topic> 
engine: "OpenAI Codex"
temperature: 0.3
max-generated-tokens: 200
top-p: 1.0
stop-sequences:
- "."
cache: on
vars:
- "topic"
examples:
- "John Dee"
postprocessor: pen-str join ' ' | sed -z 's/\s*\n$//' | sed -z 's/[^a-zA-Z0-9]*$//' | sed -z 's/$/./'
info: on
filter: off
completion: off
insertion: off