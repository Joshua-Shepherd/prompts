task: "Guess your terminal's future"
doc: "Given a view of the screen, show what the terminal may look like in the future"
prompt-version: 1
prompt: |
    These are the steps I took:
    <delim>
    Firstly, I did this:
    <delim>
    <older-screen>
    <delim>
    Secondy, I did this:
    <delim>
    <old-screen>
    <delim>
    Next, I did this
    <delim>
    <current-screen>
    <delim>
    Lastly, I did this:
    <delim>
engine: "OpenAI Codex"
temperature: 0.3
max-generated-tokens: 100
top-p: 1.0
stop-sequences:
- "<delim>"
cache: on
vars:
- older-screen
- old-screen
- current-screen
var-defaults:
- "(pen-trim-max-chars (buffer-string-visible) 300)"
examples:
- |-
    shane@mele:$NOTES$ read -d '^C-r user_input
    shane@mele:$NOTES$ read -e -r user_input^C
    shane@mele:$NOTES$ ^C
    shane@mele:$NOTES$ read -r user_input
    shane@mele:$NOTES$ read -r user_input
    hi^M^C
    shane@mele:$NOTES$ read -e user_input
    hi
    ho
    shane@mele:$NOTES$ echo "$user_input"
    hi
    shane@mele:$NOTES$
- "read"
info: on
filter: off
completion: off
insertion: off