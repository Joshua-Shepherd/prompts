task: "Explain why this code is needed"
doc: "Given some selected code, explain why it is needed. What is it used for?"
prompt-version: 2
subprompts:
- metadata: |+
    File type:
    <delim>
    <language>
    <delim>
    File contents:
    <delim>
# prompt: |+
#     <metadata>
#     `(pen-guess-major-mode-set "<language>")`<code>
#     <:pp>The above code is needed so `(comment-line 1)`
prompt: |+
    <metadata>
    <code>
    <delim>
    <:pp>The above code is needed so 
engine: "OpenAI Codex"
temperature: 0.3
max-generated-tokens: "(* 2 prompt-length)"
top-p: 1.0
yas: on
stop-sequences:
- "<delim>"
cache: on
vars:
- code
- language
# TODO In future, automatically escape the stop sequences from parameters
var-defaults:
- "(pen-selected-text)"
- "(pen-detect-language-ask)"
examples:
- "import           System.Console.GetOpt"
- "Haskell"
filter: off
completion: off
insertion: off
info: on
# postprocessor: pen-pretty-paragraph