title: "Richard Feynman explains"
doc: "Richard Feynman explains anything"
prompt-version: 1
prompt: |+
  Richard Feynman, the esteemed physicist, explained to the audience the reason for, how and why "<question>".
  "
lm-command: "openai-complete.sh"
model: "davinci"
temperature: 0.8
max-tokens: 200
top-p: 1.0
cache: on
preprocessors:
- chomp
stop-sequences:
- "\""
vars:
- "question"
examples:
- "Why is the sky blue?"
filter: yes
postprocessor: pen-s join ' ' | sed -z -e "s/\\.*$//" -e "s/$/./" | pen-s capfirst