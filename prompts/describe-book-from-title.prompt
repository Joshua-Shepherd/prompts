task: "Synopsis of book"
doc: "Given a book title, give a synopsis"
prompt-version: 1
prompt: |+
  http://readersdigest.co.uk/book-reviews/<sl:author>/<sl:title>/

  Book title: <q:title>
  Author: <q:author>
  Full synopsis: <:pp>"
engine: "OpenAI Codex"
temperature: 0.3
max-generated-tokens: "(* 2 prompt-length)"
top-p: 1.0
stop-sequences:
- "\n"
cache: on
vars:
- "author"
- "title"
examples:
- "J. R. R. Tolkien"
- "The Hobbit"
info: on
completion: off
insertion: off
postprocessor: uq | pen-pretty-paragraph