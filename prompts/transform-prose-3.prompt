task: "Transform prose"
doc: "Transform some prose given a transformation description"
prompt-version: 4
engine: OpenAI Davinci
subprompts:
- original-document: |+
    The original document:
    <document>
prompt: |+
    <original-document>
    THE END.

    The exact same document but <transformation>:
xlr-n-generate: 5
temperature: 0.7
# On each collated generation, rotate the temperature upwards by 0.1
collation-temperature-stepper: "(mod* (+ <temperature> 0.1) 1)"
max-tokens: "(* 2 prompt-length)"
top-p: 1.0
best-of: 1
cache: on
stop-sequences:
- "THE END."
vars:
- document
- transformation
preprocessors:
- cat
- slugify
var-defaults:
- "(pen-selected-text)"
postprocessors:
- sed '$d'
examples:
- "I want to ride my bicycle"
- "with empathy"
n-test-runs: 5
n-collate: 2
n-completions: 2
new-document: yes