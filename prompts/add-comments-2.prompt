task: "Add comments"
doc: "Given some code and the language, add comments"
prompt-version: 3
engine: OpenAI Codex
prompt: |+
    # The program in <from language>

    cat program_in_<from language> <<EOD
    <code>
    EOD

    # The exact same program with comments above each line

    cat program_in<from language> <<EOD
n-generate: 5
temperature: 0.2
# On each collated generation, rotate the temperature upwards by 0.1
collation-temperature-stepper: "(mod* (+ <temperature> 0.1) 1)"
max-tokens: 1000
top-p: 1.0
best-of: 1
cache: on
stop-sequences:
- "EOD"
vars:
- code
- "from language"
preprocessors:
- cat
- slugify
var-defaults:
- "(pen-selected-text)"
- "(pen-detect-language-ask)"
postprocessors:
- sed '$d'
examples:
- "print(\"Hello world with empathy\")"
- "Python"
n-test-runs: 5
n-collate: 1
n-completions: 2
new-document: yes