task: "translate"
doc: "Given some prose and a target language, translate into that language"
prompt-version: 4
engine: OpenAI Codex
prompt: |+
    # The passage in <from language>
    """
    <code>
    """
    # The same passage in <to language>
    """
xlr-n-generate: 5
temperature: 0.5
collation-temperature-stepper: "(mod (+ <temperature> 0.1) 1)"
max-tokens: "(* 3 prompt-length)"
top-p: 1.0
best-of: 1
cache: on
stop-sequences:
- "\"\"\""
vars:
- code
- "from language"
- "to language"
preprocessors:
- pen-str join ' ' # | pen-pretty-paragraph
- slugify
- slugify
var-defaults:
- "(pen-selected-text)"
- "(pen-detect-language-ask)"
postprocessor: "sed '$d' | pen-pretty-paragraph"
examples:
- "print(\"Hello world with empathy\")"
- "English"
- "simple English a child can understand"
n-test-runs: 5
n-collate: 3
n-completions: 2
new-document: yes
external-related:
- "https://www.youtube.com/watch?v=Iq3rDFZOorw"
- "https://semiosis.github.io/posts/the-codex-quine/"